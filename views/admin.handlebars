<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<h1> DIGSB K9 ANIMAL RESCUE </h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each dog_data}}
			  	{{#unless this.unavailable}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.dog_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/dogs/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="dog_id" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">unavailable</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each dog_data}}
			  	{{#if this.unavailable}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.dog_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/dogs/create" method="POST">
				<input type="text" class="form-control" name="dog_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
